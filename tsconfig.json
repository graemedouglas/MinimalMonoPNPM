{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@projectmeb/ui/*": ["packages/ui/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["packages/**/*", "apps/**/*"]
}

